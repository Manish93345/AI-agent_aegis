{
    "paths": {
        "logs_directory": "data/logs/",
        "encrypted_directory": "data/encrypted/",
        "models_directory": "data/models/",
        "backup_directory": "data/backups/",
        "temp_directory": "data/temp/"
    },
    
    "voice_settings": {
        "sample_rate": 16000,
        "chunk_size": 1024,
        "record_seconds": 5,
        "energy_threshold": 300,
        "pause_threshold": 0.8,
        "wake_word": "lisa",
        "language": "en-US",
        "speech_rate": 150,
        "volume": 1.0,
        "voice_gender": "female"
    },
    
    "security_settings": {
        "max_auth_attempts": 3,
        "lockout_minutes": 15,
        "auto_lock_minutes": 30,
        "panic_phrase": "red alert red alert"
    },
    
    "performance": {
        "use_gpu": true,
        "gpu_device_id": 0,
        "max_memory_mb": 2048,
        "thread_count": 4,
        "priority": "high"
    },

    "user": "default_user",
    "agent_name": "Jarvis",
    "system": {
        "os": "windows",
        "voice_enabled": true,
        "auto_start": false,
        "hotkey_enabled": true,
        "hotkey": "ctrl+shift+j"
    },
    "llm_settings": {
        "backend": "ollama",
        "model": "llama3.1:8b",
        "temperature": 0.7,
        "max_tokens": 1000,
        "max_history": 10,
        "context_window": 4096,
        "stream_responses": true
    },
    
    "automation": {
        "auto_save_context": true,
        "learn_from_patterns": true,
        "suggest_routines": true,
        "predictive_help": true
    },
    "security": {
        "require_confirmation": true,
        "dangerous_commands": ["rm -rf", "format", "shutdown", "dd"],
        "encrypt_data": true,
        "log_all_commands": true
    }
}